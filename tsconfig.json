{
  "compilerOptions": {
    "module": "es2022",
    "types": ["node"],
    "lib": ["es7"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "noLib": false,
    "incremental": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
